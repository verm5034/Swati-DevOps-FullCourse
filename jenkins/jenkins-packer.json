{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "*ubuntu-xenial-16.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.small",
      "ssh_username": "ubuntu",
      "ami_name": "JENKINS-NODE-{{ timestamp }}",
      "ami_groups": ["all"]
    }
  ],
  "provisioners": [
    {
      "type": "chef-solo",
      "install_command": "curl -vLO https://omnitruck.chef.io/install.sh && {{if .Sudo}}sudo{{end}} bash ./install.sh -v 12.18.31 && rm install.sh",
      "cookbook_paths": [ "berks-cookbooks" ],
      "guest_os_type": "unix",
      "run_list": [
        "recipe[jenkins-node::default]"
      ]
    }
  ],
 "post-processors": [
   {
     "type": "manifest",
     "output": "aws-manifest.json",
     "strip_path": true
   }
 ]
}
